{
  "manifest_version": 2,
  "name": "Lorem Ipsum Auto-Insert",
  "version": "1.0.0",
  "description": "Automatically replaces lorem[number]; with lorem ipsum text in any input field. Supports paragraphs and WordPress editors.",
  "short_name": "Lorem Auto",
  "author": "Borys Pidperygora",
  "homepage_url": "https://github.com/bpidperygora/lorem-auto-insert.git",
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "lorem-ipsum-auto-insert@yourdomain.com",
      "strict_min_version": "57.0"
    }
  }
} 